---
import '@fontsource/montserrat';
import '@fontsource/nunito';

import i18next, { t } from 'i18next';

import LanguageSwitcher from '../components/LanguageSwitcher.svelte';
import Background from '../components/Background.svelte';
import Surface from '../components/Surface.svelte';

import { TITLE, SITE_PREVIEW_URL } from '../constants';
---

<html lang={i18next.language} class="scroll-smooth">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <link rel="apple-touch-icon" href="/apple-touch-favicon.png" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="keywords"
            content="portfolio, web developer, software developer, web developer portfolio"
        />
        <meta name="description" content={t('description')} />
        <meta property="og:site_name" content={TITLE} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={TITLE} />
        <meta property="og:image" content={SITE_PREVIEW_URL} />
        <meta property="og:description" content={t('description')} />
        <meta property="twitter:title" content={TITLE} />
        <meta property="twitter:image" content={SITE_PREVIEW_URL} />
        <meta property="twitter:description" content={t('description')} />
        <meta property="twitter:card" content="summary_large_image" />
        <title>{TITLE}</title>
        <script
            is:inline
            src="https://kit.fontawesome.com/da377e052d.js"
            crossorigin="anonymous"></script>
        <link
            is:inline
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
        />
    </head>
    <body>
        <div
            class="relative text-lg font-montserrat text-slate-200 bg-gradient-to-b from-slate-950 to-slate-900 overflow-hidden"
        >
            <LanguageSwitcher />
            <main class="max-w-screen-xl relative z-10 mx-auto transition-all">
                <slot />
            </main>
            <Background client:load />
            <Surface client:load />
        </div>
    </body>
</html>
